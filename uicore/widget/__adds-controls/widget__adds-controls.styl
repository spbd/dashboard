.widget
{
    &__adds-controls
    {
        position: absolute;
        width: 100%;
        height: 100%;

        opacity: 0;
        transition: all .5s

        &:hover
        {
            opacity: 1;
        }
    }

    &__adds-pane
    {
        width: 100%;
        height: 25px;
        background: #FFF;
        opacity: 0.95;

        &:hover
        {
            cursor: move;
        }
    }

    &__adds-remove,
    &__adds-settings
    {
        position: absolute;
        top: 3px;
        left: 4px;
        font: 9px Verdana;
        padding: 3px 6px 3px 6px;
        color: #C2C2C2;
        cursor: pointer;
        border: 1px solid #E0DFDF;

        &:hover
        {
            background: #eee;
        }
    }

    &__adds-settings
    {
        left: 35px;
    }

    &__adds-resize
    {
        border: 10px solid #FFF;
        border-left-color: transparent;
        border-top-color: transparent;
        border-bottom-width: 10px;
        width: 0;
        height: 0;
        position: absolute;
        left: 100%;
        top: 100%;
        margin-left: -20px;
        margin-top: -20px;
        cursor: nwse-resize;
        opacity: 0.6;
    }
}


