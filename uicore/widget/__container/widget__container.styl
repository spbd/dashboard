.widget
{

    &__container
    {
        perspective: 800px;
        -webkit-perspective: 800px;

        position: absolute;

        top: 100px;
        left: 100px;

        width: 200px;
        height: 250px;
    }

    &__faces
    {
        width: 100%;
        height: 100%;

        transition: all 1s;
        transform-style: preserve-3d;

        transform-origin: right center;

        // transform: translateX(-100%) rotateY(180deg)

        &_side_back
        {
            transform: translateX(-100%) rotateY(180deg)
        }
    }

    &__front,
    &__settings
    {
        display: block;
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
    }

    &__front
    {
        background: red;
    }

    &__settings
    {
        transform: rotateY(180deg);
        background: #282828;
        border-radius: 10px;
        border: 1px solid #0c0c0c;
        box-shadow: 0 0 26px -1px;
        opacity: 0.7;
    }

}
