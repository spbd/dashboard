.navigator
{
    &__tail-wrap,
    &__tail
    {
        position: relative;
    }

    &__tail
    {
        top: 15px;

        width: 40px;
        height: 40px;
        background: #282828;

        transform: rotate(45deg);

        border-left: 1px solid #000;
        border-top: 1px solid #000;
    }

    &__tail-wrap
    {
        top: 3px;

        width: 41px;
        height: 30px;
        margin: 0 auto;

        overflow: hidden;
    }
}

