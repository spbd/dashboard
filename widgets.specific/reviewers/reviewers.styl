.reviewers
{
    width: 100%;
    height: 100%;
    font-family: Tahoma, Helvetica, sans-serif;
    background: #D5D9D0;

    &__header
    {
        font-size: 24px;
        font-weight: bold;
        padding: 10px;
        text-align: center;
        background-color: #394A53;
        color: #E0E0E0;
    }

    &__list
    {
        margin: 0 auto;
    }

    &__listContainer
    {
        width: 100%;
    }

    &__item
    {
        display: inline-block;
        width: 200px;

        background-color: #BAC2B1;
        color: #676C61;
        margin: 1px 1px 0 0;
    }

    &__item_priority_critical &__itemHeader
    {
        background-color: #A76162;
    }

    &__itemHeader
    {
        background-color: #89A764;
        color: #FFFFFF;
        font-size: 16px;
        font-weight: bold;
        padding: 10px;
    }

    &__description
    {
        font-size: 12px;
        font-style: italic;
        padding: 10px;
    }

    &__user
    {
        padding: 0 10px 0;
        float: left;
    }

    &__userName
    {
        text-align: center;
        position: relative;
        bottom: -20px;
        font-size: 12px;
        padding: 3px;
        font-style: italic;
        background-color: rgba(0, 0, 0, 0.5);
        color: #FFFFFF;
        margin-top: -10px;
    }

}
