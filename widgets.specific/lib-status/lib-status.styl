.lib-status
{
    width: 100%;
    height: 100%;

    background: #83817E;

    font-family: Tahoma;
    color: #fff;
    text-align: center;

    transition: background-color 1s ease;

    &_status
    {
        &_success
        {
            background: #86CB5C;
        }

        &_failed
        {
            background: #CB5C5C;
        }
    }

    &__title
    {
        font-size: 20px;

        padding: 5px;
        background: #030303;
        opacity: 0.3;
    }

    &__lib
    {
        font-size: 30px;
        padding: 10px;
    }

    &__content
    {
        height: 100%;
    }

    &__container
    {
        margin: 0 auto;
        border-spacing: 1px;
        width: 95%;
    }

    &__load
    {
        text-align: center;
        width: 100%;
    }
}
