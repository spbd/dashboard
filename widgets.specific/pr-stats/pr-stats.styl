.pr-stats {
  width: 100%;
  height: 100%;

  font-size: 20px;
  background: #4f6771;
  font-family: Tahoma, san-serif;

  &__header {
    padding: 10px;
    text-align: center;
    font-weight: bold;
    background: #638f79;
    color: #dcdcdc;
  }

  &__lib-name {
    padding: 20px;
    text-align: center;

    font-weight: bold;

    background: #79b195;
    color: #FFFFFF;

    height: 100%;
    margin: 0 0 -183px 0;
  }

  &__info {
  }

  &__info-line {
    border-bottom: 1px solid #79b195;
  }

  &__info-line:last-of-type {
    border-bottom: none;
  }

  &__info-name {
    width: 20%;
    background: #596465;
    color: #d1d1d1;
    display: inline-block;
    box-sizing: border-box;
    padding: 10px 10px;
    vertical-align: top;
    line-height: 29px;
  }

  &__info-wait {
    text-align: center;
    padding-top: 10%;
    color: #ffffff;
  }

  &__info-values {
    background: #647987;
    color: #ffffff;
    display: inline-block;
    padding: 10px 10px;
    box-sizing: border-box;
    width: 80%;
  }

  &__info-value {
    display: inline-block;
    vertical-align: top;
  }

  &__info-value_type_total {
    font-size: 120%;
    margin: 0 10px 0 0;
    font-weight: bold;
  }

  &__info-value_type_today {
    color: #60d69b;
  }

  &__info-value_type_today:before {
    content: '+';
    padding: 0 3px 0 0;
  }

  &__info-value_type_today:after {
    content: 'today';
    padding: 0 0 0 3px;
    color: #e0e0e0;
    font-style: italic;
    font-size: 80%;
  }
}
