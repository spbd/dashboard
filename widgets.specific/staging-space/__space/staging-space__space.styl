$grey = #646464;

.staging-space
{
    &__space
    {
      height: 100%;
      text-align: center;
      position: relative;

      display: flex;
      align-items: center;

      &_type_used
      {
        background-color: $red;

        color #fff;
      }

      &_type_available
      {
        background-color: $blue;

        color #fff;
      }    
    }

    &__value
    {
      text-align: center;
      width: 100%;
    }  

    &__percents
    {
      position: absolute;
      top: 0;
      right: 0;
      transform: rotate(270deg);
      transform-origin: 100% 100%;

      border-top: 1px solid $grey;

      font-size: 11px;
    }

}
