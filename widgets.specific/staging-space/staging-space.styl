$red = #CB5C5C
$blue = #5AB6C7
$lightGrey = #E0DBDB
$greenGrey = #4F6771
$grey = #646464

.staging-space
{
    width: 100%;
    height: 100%;

    box-sizing: border-box;
    box-shadow 0 0 1px #eee inset;
    height: 100%;

    font-weight: 700;
    font-family: Tahoma, sans-serif;

    &__title
    {
      background-color: $grey;
      height: 15%;
      line-height: 22px;

      font-size: 13px;
      text-align: center;
      color: $lightGrey;
    }

    &__container
    {
      height: 85%;
      width: 100%;
      overflow: hidden;
    }
}
